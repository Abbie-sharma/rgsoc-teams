nav.actions
  ul.list-inline
    li = link_to icon('plus', 'Submit a Project'), new_project_path, class: 'btn btn-default btn-sm'

h1.header
  = icon('group')
  span Projects

table.table.table-striped.table-bordered.table-condensed
  tr
    th = sortable 'name'
    th = sortable 'created_at', 'Submitted'
    th = sortable 'aasm_state', 'Status'

  - @projects.each do |project|
    tr
      td
        = link_to project.name, project
        - if current_user == project.submitter
          = link_to [:edit, project], class: 'edit-project' do
            = icon('edit')
          = link_to project, data: { confirm: 'This action cannot be undone. Are you sure?' }, method: :delete, class: 'edit-project' do
            = icon('minus-sign')
      td = l project.created_at, format: :short
      td = project_status project
