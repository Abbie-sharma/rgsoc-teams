<div id="login-required-overlay">


  <div class="well">
    <h1>Login Required</h1>
    <p>This action on the RGSoC Teams App requires a user account.</p>
    <p>
      <%= link_to user_github_omniauth_authorize_path, class: "btn btn-primary btn-lg" do %>
        <i class="icon-github"></i>&nbsp;Login with your Github account.
      <% end %>
      <%= link_to "Cancel", root_path, class: "btn btn-lg" %>
    </p>
  </div>

</div>

<style type=text/css>

#login-required-overlay {
  position: fixed;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  overflow-x: hidden;
  overflow-y: hidden;
  background-color: rgb(10,10,10); /* Black fallback color */
  background-color: rgba(50,50,50, 0.7); /* Black w/opacity */
  z-index: 999;
}

#login-required-overlay .well {
  position: absolute;
  top: 20%;
  left: 50%;
  margin-left: -250px;
  width: 500px;
  box-shadow: 5px 9px 36px -9px black;
}
</style>
